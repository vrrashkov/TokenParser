    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'token_parser'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=token_parser",
                    "--package=token_parser"
                ],
                "filter": {
                    "name": "token_parser",
                    "kind": "bin"
                }
            },
            "args": ["--config", "assets/design_tokens_config.yaml"],
            "cwd": "${workspaceFolder}"
        }
    ]
}